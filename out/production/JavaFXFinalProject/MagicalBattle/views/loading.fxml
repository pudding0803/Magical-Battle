<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../styles/choice.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MagicalBattle.controllers.LoadingController">
   <bottom>
      <AnchorPane prefHeight="600.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <ProgressBar fx:id="progress" layoutX="200.0" layoutY="270.0" prefHeight="60.0" prefWidth="500.0" progress="0.0" style="-fx-accent: #00aaff;" />
            <Label fx:id="file" layoutX="200.0" layoutY="380.0">
               <font>
                  <Font name="Comic Sans MS" size="14.0" />
               </font>
            </Label>
            <ImageView fx:id="image" pickOnBounds="true" preserveRatio="true" visible="false" />
            <Button fx:id="start" disable="true" layoutX="380.0" layoutY="440.0" mnemonicParsing="false" onAction="#switchToMenu" prefHeight="70.0" prefWidth="140.0" text="Start">
               <font>
                  <Font name="Comic Sans MS" size="32.0" />
               </font>
            </Button>
            <Label fx:id="loading" layoutX="262.0" layoutY="150.0" prefHeight="67.0" prefWidth="378.0">
               <font>
                  <Font name="Comic Sans MS" size="48.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
